<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>QIWI charity widgets</title>
    <link rel="stylesheet" type="text/css" href="css/style.css">
</head>
<body>

    <ul class="menu">
        <% widgets.forEach(function(widget, index) { %>
            <li>

                <a href="#<%= widget.width %><%= widget.height %><%= widget.name %><%= widget.params %>">Виджет <%= widget.name %> </a>

            </li>
        <% }); %>
    </ul>

    <div class="widgets">

        <% widgets.forEach(function(widget, index) { %>

            <div class="widget">

                <h1 id="<%= widget.width %><%= widget.height %><%= widget.name %><%= widget.params %>">Виджет <%= widget.name %> </h1>

                <iframe width="<%= widget.width %>" height="<%= widget.height %>" src="<%= widget.name %>?<%= widget.params %>" allowtransparency="true" scrolling="no" frameborder="0"></iframe>

                <a href="<%= widget.name %>?<%= widget.params %>" target="_blank" class="widget-info__get-code-button" >Открыть в отдельном окне</a>

                <h2>Код для вставки</h2>

                <div class="code"> &lt;iframe  width="<%= widget.width %>" height="<%= widget.height %>"src="<a href="https://widget.qiwi.com/<%= widget.name %>?<%= widget.params %>" target="_blank">https://widget.qiwi.com/<%= widget.name %>?<%= widget.params %></a>" allowtransparency="true" scrolling="no" frameborder="0"&gt;&lt;/iframe&gt; </div>

            </div>

        <% }); %>
    </div>

</body>
</html>